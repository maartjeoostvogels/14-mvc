<div class="row">
  <div class="col-auto">
    <h3>Edit Post</h3>

    <form method="POST" class="form edit-blog-form">
      <input type="hidden" id="blog-id" name="blog-id" value="{{id}}" />
      <div class="form-group">
        <label for="blog-name">Title</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" value="{{title}}" />
      </div>
      <div class="form-group">
        <label for="blog-desc">Content</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc">{{blogpost}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update Post</button>
      </div>
    </form>
  </div>
  </div>
</div>

<script src="../../js/blogs.js"></script>